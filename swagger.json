{
    "swagger":"2.0",
    "info":{
        "version":"1.0.0",
        "description":"API for E-Commerce application",
        "title":"E-commerce API"
    },
    "host":"localhost:3000",
    "securityDefinitions":{
       "jwt":{
        "in":"header",
        "name":"Authorization",
        "type":"apiKey"
       }
    },
    "paths":{
        "/api/product": {
            "get":{
                "tags":["Products"],
                "summary":"Get Product",
                "security":[{
                   "jwt":{}
                }],
                "description":"User will get all products",
                "responses":{
                    "200": {
                        "description":"OK"
                    },
                    "401": {
                        "description": "Unauthorized"
                    }
                }
            }
        },
        "/api/users/signin": {
            "post":{
                "tags":["Users"],
                "summary":"Login",
                "description":"User login to get token",
                "parameters":[
                    {
                        "in":"body",
                        "name":"body",
                        "description":"User Credentials",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "email":{
                                    "type": "string"
                                },
                                "password":{
                                    "type": "string"
                                }
                            }
                        }
                    }
                ],
                "responses":{
                    "200": {
                        "description":"OK"
                    },
                    "400": {
                        "description": "Incorrect Credentials"
                    }
                }
            }
        }
    }
}
